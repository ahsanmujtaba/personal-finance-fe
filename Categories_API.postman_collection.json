	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-login script for authentication",
					"const loginUrl = pm.variables.get('base_url') + '/api/login';",
					"const email = pm.variables.get('test_email') || 'test@example.com';",
					"const password = pm.variables.get('test_password') || 'password123';",
					"",
					"// Skip login for register and login endpoints",
					"if (pm.request.url.path.includes('register') || pm.request.url.path.includes('login')) {",
					"    return;",
					"}",
					"",
					"// Check if we already have a valid token",
					"const currentToken = pm.variables.get('auth_token');",
					"if (currentToken && currentToken.length > 0) {",
					"    return;",
					"}",
					"",
					"// Perform login to get token",
					"pm.sendRequest({",
					"    url: loginUrl,",
					"    method: 'POST',",
					"    header: {",
					"        'Content-Type': 'application/json',",
					"        'Accept': 'application/json'",
					"    },",
					"    body: {",
					"        mode: 'raw',",
					"        raw: JSON.stringify({",
					"            email: email,",
					"            password: password",
					"        })",
					"    }",
					"}, function (err, response) {",
					"    if (err) {",
					"        console.log('Login failed:', err);",
					"        return;",
					"    }",
					"    ",
					"    if (response.code === 200) {",
					"        const responseJson = response.json();",
					"        if (responseJson.token) {",
					"            pm.variables.set('auth_token', responseJson.token);",
					"            console.log('Authentication successful');",
					"        }",
					"    } else {",
					"        console.log('Login failed with status:', response.code);",
					"    }",
					"});"
				]
			}
		}
	],
